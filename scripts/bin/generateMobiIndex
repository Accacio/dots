#!/bin/sh
echo "<html><head>
<title>Files</title>
</head>
<body>
<h1>Files</h1>
<ol>
$(find . -maxdepth 1 -name '*.mobi'  -printf "%f\n"| awk '{print "<li><a href=" "\x22" $1 "\x22" ">" $1 "</a></li>"}')
</ol></body></html>"


