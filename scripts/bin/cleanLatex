#!/bin/bash
if [ "`basename $PWD`" = "src" ] || [ "$1" = "-f" ]
  then
    find .  -type f -not -name '*.tex'\
     -not -name '*.org' \
     -not -name '*.dot' \
     -not -name '*.exe' \
     -not -name '*.sty' \
     -not -name '*.cls' \
     -not -name '*.bib' \
     -not -name '*.bat' \
     -not -name '*.sh' \
     -not -name '*.pdf' \
     -not -name '*.projectile'\
     -not -name 'makefile'\
     -not -name '*.ist'\
     -not -name '*.bst'\
     -not -wholename '*/auto/*'\
     | xargs rm --
       else
         echo `basename $0`: folder \"`basename $PWD`\" may not be a tex project
         exit
fi
