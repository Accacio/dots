#!/bin/bash
case $BLOCK_BUTTON in
    1) ~/dots/scripts/changeSoundOutput >/dev/null;;
    3) i3-msg exec pavucontrol 1>/dev/null;;
esac


output=$(pactl list short sink-inputs|head -n 1|cut -f2)
outputName=$(pactl list short sinks|grep "^$output"|cut -f2)
outputName=${outputName:29}

status=$(pactl list sinks | grep "Sink #$output" -A 8|tail -n 1|awk '{print $2}')
case $status  in
    "yes")
	echo ðŸ”‡ $(pactl list sinks | grep "Sink #$output" -A 9|tail -n 1|awk '{print $5}')  $(echo $outputName)
	echo ""
	echo "#999999"
	;;
    "no")
	echo  ðŸ”Š $(pactl list sinks | grep "Sink #$output" -A 9|tail -n 1|awk '{print $5}')  $(echo $outputName)
	echo ""
	echo "#aaFF22"
	;;
esac




